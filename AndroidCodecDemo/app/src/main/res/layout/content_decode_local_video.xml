<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_decode_url_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.learnvideo.androidcodecdemo.DecodeLocalVideoActivity"
    tools:showIn="@layout/activity_decode_local_video">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="准备播放"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_decode_video"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="播放mp4视频"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"/>
    </LinearLayout>



    <TextureView
        android:id="@+id/texture_view"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="240dp" />
</LinearLayout>
